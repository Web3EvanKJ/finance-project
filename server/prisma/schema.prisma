generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum OrderType {
  BUY
  SELL
}

model User {
  id        String   @id @default(cuid())
  email     String?  @unique
  password  String?
  googleId  String?  @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  trades Trade[]
}

model Trade {
  id     String @id @default(cuid())
  user   User   @relation(fields: [userId], references: [id])
  userId String

  symbol     String
  type       OrderType
  quantity   Decimal?  @db.Decimal(20, 10)
  price      Decimal   @db.Decimal(20, 10)
  totalValue Decimal   @db.Decimal(20, 10)

  note String?
  date DateTime @default(now())

  // For future PnL or linking buys to sells
  linkedBuyId String?
  linkedBuy   Trade?  @relation("TradeLink", fields: [linkedBuyId], references: [id])
  sells       Trade[] @relation("TradeLink")

  createdAt DateTime @default(now())
}
